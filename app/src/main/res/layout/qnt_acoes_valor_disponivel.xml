                android:text="Valor disponível: R$"
                android:paddingBottom="10dp">
            </TextView>
            <EditText
                android:id="@+id/valDisponivel"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtValorDisponivel"
                android:layout_alignBaseline="@+id/txtValorDisponivel"
                android:hint="0,00"
                android:inputType="numberDecimal">
            </EditText>
            <TextView
                android:id="@+id/txtValorDoPapel"
                style="@style/Conteudo"
                android:layout_below="@+id/txtValorDisponivel"
                android:text="Valor do papel: R$"
                android:paddingBottom="10dp">
            </TextView>
            <EditText
