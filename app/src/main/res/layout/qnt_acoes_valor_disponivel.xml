                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtValorDoPapel"
                android:layout_alignBaseline="@+id/txtValorDoPapel"
                android:hint="0,00"
                android:inputType="numberDecimal">
            </EditText>
            <TextView
                android:id="@+id/txtQuantidadeDeAcoes"
                style="@style/Conteudo"
                android:layout_below="@+id/txtValorDoPapel"
                android:text="Quantidade de ações: "
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:id="@+id/quantidade"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtQuantidadeDeAcoes"
                android:layout_alignBaseline="@+id/txtQuantidadeDeAcoes"
                android:hint="0">
            </TextView>
            <CheckBox
                android:id="@+id/cbFracionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtQuantidadeDeAcoes"
                android:layout_alignParentEnd="true"
                android:text="Fracionário"/>
        </RelativeLayout>
