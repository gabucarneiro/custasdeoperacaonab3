<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/mosaictransparent"
    style="@style/BasicLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CadastroPapel"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/BasicLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                style="@style/Header"
                android:text="@string/cadastroPapel"
                android:layout_marginBottom="30dp"
                android:textAllCaps="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtId"
                        style="@style/Conteudo"
                        android:text="ID do papel: "
                        android:paddingBottom="10dp">
                    </TextView>
                    <EditText
                        android:id="@+id/idPapel"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:layout_alignBaseline="@+id/txtId"
                        android:layout_toEndOf="@+id/txtId"
                        android:inputType="number">
                    </EditText>
                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtId"
                        android:layout_alignParentEnd="true"
                        android:text="buscar"
                        android:textSize="15sp"
                        android:textAllCaps="true"
                        android:onClick="pesquisarPapel">
                    </Button>
                    <TextView
                        android:id="@+id/txtNomedoPapel"
                        style="@style/Conteudo"
                        android:text="Nome do papel: "
                        android:layout_below="@+id/txtId"
                        android:paddingBottom="10dp">
                    </TextView>
                    <EditText
                        android:id="@+id/nomePapel"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/txtNomedoPapel"
                        android:layout_alignBaseline="@+id/txtNomedoPapel"
                        android:hint="ZZZZ3F"
                        android:inputType="textCapCharacters">
                    </EditText>
                    <TextView
                        android:id="@+id/txtValordeCompra"
                        style="@style/Conteudo"
                        android:text="Valor de compra: R$"
                        android:layout_below="@+id/txtNomedoPapel"
                        android:paddingBottom="10dp">
                    </TextView>
                    <EditText
                        android:id="@+id/valCadastroPapel"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00"
                        android:inputType="numberDecimal"
                        android:layout_alignBaseline="@+id/txtValordeCompra"
                        android:layout_toEndOf="@+id/txtValordeCompra">
                    </EditText>
                    <Button
                        android:id="@+id/btnCustas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBaseline="@+id/txtValordeCompra"
                        android:layout_marginStart="20dp"
                        android:gravity="end|end|center"
                        android:text="Custas">
                    </Button>
                    <TextView
                        android:id="@+id/txtQuantidade"
                        style="@style/Conteudo"
                        android:layout_below="@+id/txtValordeCompra"
                        android:text="Quantidade: "
                        android:paddingBottom="20dp">
                    </TextView>
                    <EditText
                        android:id="@+id/valQuantidadePapel"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/txtQuantidade"
                        android:layout_alignBaseline="@+id/txtQuantidade"
                        android:hint="0"
                        android:inputType="number">
                    </EditText>
                    <CheckBox
                        android:id="@+id/cadastroCbFracionario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBaseline="@+id/txtQuantidade"
                        android:text="FracionÃ¡rio">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/CadastroCBDataCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inserir data da compra"
                        android:layout_below="@+id/cadastroCbFracionario"/>

                <!--        -->
                    <RelativeLayout
                        android:id="@+id/RLDatadaCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CadastroCBDataCompra">
                        <TextView
                            android:id="@+id/cadastroTxDataCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_alignParentStart="true"
                            android:text="Data da compra: "/>
                        <Spinner
                            android:id="@+id/spinnerData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/cadastroTxDataCompra"/>
                        <Spinner
                            android:id="@+id/spinnerMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cadastroTxDataCompra"
                            android:layout_toEndOf="@+id/spinnerData"/>
                        <Spinner
                            android:id="@+id/spinnerAno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cadastroTxDataCompra"
                            android:layout_toEndOf="@+id/spinnerMes"/>
                        <ImageButton
                            android:id="@+id/cadastroCalendarBtn"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:src = "@drawable/icocalendar2"
                            android:layout_alignBaseline="@+id/cadastroTxDataCompra"
                            android:layout_alignParentEnd="true"/>
                        <CalendarView
                            android:id="@+id/cadastroDpDataCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinnerData"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            <Button
                android:id="@+id/cadastroPapelBtnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="salvar no banco de dados"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:onClick="salvarPapel"
                android:layout_weight="1">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Listar banco de dados"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:onClick="recuperarBD"
                android:layout_weight="1">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Excluir papel"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:onClick="excluirPapelBD"
                android:layout_weight="1">
            </Button>
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Resumo Local"
                    android:id="@+id/resumoCadastrPapel">
                </TextView>
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resumoView2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resumo">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resumoView2BD"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resumoBD"
                    android:hint="Resumo">
                </TextView>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_teste"
                android:orientation="vertical">
            </LinearLayout>

    </LinearLayout>
</ScrollView>