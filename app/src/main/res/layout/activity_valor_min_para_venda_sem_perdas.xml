<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/BasicLayout"
        tools:context=".ValorMinParaVendaSemPerdas">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".acoesDiferencaCompraVenda"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/BasicLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
        <TextView
            style="@style/Header"
            android:text="@string/acoesDiferencaCompraVenda"
            android:layout_marginBottom="30dp"
            android:textAllCaps="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Conteudo"
                android:text="Valor quando adquirido: R$">
            </TextView>
            <EditText
                android:id="@+id/valPapelAdquirido"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0,00"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Conteudo"
                android:text="Quantidade de ações: ">
            </TextView>
            <EditText
                android:id="@+id/quantidade"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Conteudo"
                android:text="Valor de venda: R$">
            </TextView>
            <EditText
                android:id="@+id/valPretendidoVenda"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0,00"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="calcular"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:onClick="calcular">
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/Conteudo"
                android:text="Valor utilizado na compra do papel:">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/Conteudo"
                    android:layout_marginLeft="15dp"
                    android:text="R$">
                </TextView>
                <TextView
                    android:id="@+id/valCompraDoPapel"
                    style="@style/Conteudo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0,00">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <!--  ***** CUSTOS OPERACIONAIS *****  -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="custos operacionais"
            android:textColor="@color/darkblue"
            android:textSize="23dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginTop="25dp">
        </TextView>

        <!--  ***** CORRETORA *****  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                style="@style/Conteudo"
                android:text="Alterar %"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Conteudo"
                        android:text="Corretagem: R$">
                    </TextView>
                    <TextView
                        android:id="@+id/corretagem"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctCorretagem"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00"
                        android:contextClickable="false">
                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Conteudo"
                        android:text="Custódia (CBLC): R$">
                    </TextView>
                    <TextView
                        android:id="@+id/custodia"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctCustodia"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00"
                        android:clickable="false">
                    </EditText>
                </LinearLayout>

                <!--  ***** B3 *****  -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Conteudo"
                        android:text="Emolumentos: R$">
                    </TextView>
                    <TextView
                        android:id="@+id/emolumentos"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctEmolumentos"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">
                    <TextView
                        style="@style/Conteudo"
                        android:text="(Taxa de liquidação da CBLC): R$"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tax_liquidacao"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00"
                        android:textSize="15dp">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctLiquidacao"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">
                    <TextView
                        style="@style/Conteudo"
                        android:text="(Taxa de negociação): R$"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tax_negociacao"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00"
                        android:textSize="15dp">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctNegociacao"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00">
                    </EditText>
                </LinearLayout>

                <!--  ***** GOVERNO - IMPOSTOS *****  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Conteudo"
                        android:text="ISS: R$">
                    </TextView>
                    <TextView
                        android:id="@+id/iss"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctIss"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/Conteudo"
                        android:text="IR da compra: R$">
                    </TextView>
                    <TextView
                        android:id="@+id/impostoDeRenda"
                        style="@style/Conteudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0,00">
                    </TextView>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pctIr"
                        style="@style/Conteudo"
                        android:textSize="10dp"
                        android:hint="0,00">
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end">
                    <CheckBox
                        android:id="@+id/cbCorretagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cbCustodia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Auto"
                        android:textSize="15dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp">
                    </TextView>

                    <CheckBox
                        android:id="@+id/cbLiquidacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cbNegociacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cbIss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cbIr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Conteudo"
                android:text="Valor mínimo para venda sem perdas: R$ "
                android:textSize="15dp">
            </TextView>
            <TextView
                android:id="@+id/valMinVendaSemPerdas"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0,00"
                android:inputType="numberDecimal"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Conteudo"
                android:text="Variação em %: ">
            </TextView>
            <TextView
                android:id="@+id/valVarMinEmPercent"
                style="@style/Conteudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0,00"
                android:inputType="numberDecimal">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>